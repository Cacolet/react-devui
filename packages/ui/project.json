{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui",
  "projectType": "library",
  "tags": ["scope:ui"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ui",
        "tsConfig": "packages/ui/tsconfig.lib.json",
        "main": "packages/ui/index.ts",
        "assets": [
          {
            "glob": "**/*",
            "input": "packages/ui/styles",
            "output": "/styles"
          },
          {
            "glob": "CHANGELOG.md",
            "input": "packages/ui",
            "output": "/"
          },
          {
            "glob": "README.md",
            "input": "packages/ui",
            "output": "/"
          },
          {
            "glob": "LICENSE",
            "input": "",
            "output": "/"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx,js,jsx,md}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ui"],
      "options": {
        "jestConfig": "packages/ui/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "coverageReporters": ["clover", "json", "lcov", "text"]
      }
    }
  }
}
