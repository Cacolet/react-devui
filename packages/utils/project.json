{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils",
  "projectType": "library",
  "tags": ["scope:shared"],
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/utils",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "main": "packages/utils/index.ts",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "assets": [
          {
            "glob": "CHANGELOG.md",
            "input": "packages/utils",
            "output": "/"
          },
          {
            "glob": "README.md",
            "input": "packages/utils",
            "output": "/"
          },
          {
            "glob": "LICENSE",
            "input": "",
            "output": "/"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/**/*.{ts,tsx,js,jsx,md}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "coverageReporters": ["clover", "json", "lcov", "text"]
      }
    }
  }
}
