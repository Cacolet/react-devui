{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "newLine": "LF",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "disableSizeLimit": true,
    "noErrorTruncation": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@react-devui/hooks": ["packages/hooks/index.ts"],
      "@react-devui/hooks/*": ["packages/hooks/*"],
      "@react-devui/icons": ["packages/icons/index.ts"],
      "@react-devui/icons/*": ["packages/icons/*"],
      "@react-devui/ui": ["packages/ui/index.ts"],
      "@react-devui/ui/*": ["packages/ui/*"],
      "@react-devui/utils": ["packages/utils/index.ts"],
      "@react-devui/utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
